<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.category"
            name="%jmx_category">
      </category>
      <view
            name="%JMX_VIEW_NAME"
            icon="icons/computer_edit.png"
            category="org.openehealth.ipf.platform.manager.jmxexplorer.ui.category"
            class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView"
            id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective">
         <view
               id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView"
               ratio="0.95"
               relationship="stack"
               relative="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective.main.left.top"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.6"
               relationship="stack"
               relative="org.openehealth.ipf.platform.manager.connection.ui.perspective.DefaultPerspective.bottom.results"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
           <viewShortcut
               id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView">
         </viewShortcut>
      </perspectiveExtension>
    </extension>
    <extension
          point="org.eclipse.ui.preferencePages">
       <page
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.JMXExplorerPreferencePage"
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.JMXExplorerPreferencePage"
             name="%JMX_Explorer_name">
       </page>
    </extension>
    <extension
          id="org.openehealth.ipf.platform.manager.jmxexplorer.ui"
          point="org.eclipse.core.runtime.preferences">
       <initializer
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.preferences.PreferencesInitializer">
       </initializer>
    </extension>
    <extension
          point="org.eclipse.core.runtime.adapters">
       <factory
             adaptableType="org.openehealth.ipf.platform.manager.connection.ui.tree.Node"
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.adapter.NodeAdapterFactory">
          <adapter
                type="org.openehealth.ipf.platform.manager.connection.ui.tree.Node">
          </adapter>
       </factory>
    </extension>
    <extension
          point="org.eclipse.ui.editors">
       <editor
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.editor.MBeanNodeEditor"
             default="true"
             icon="icons/database_edit.png"
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.editor.MBeanNodeEditor"
             name="%jmx_editor_name">
       </editor>
    </extension>
    <extension
          point="org.eclipse.ui.menus">
       <menuContribution
             locationURI="popup:org.openehealth.ipf.platform.manager.jmxexplorer.ui.views.JMXView?after=additions">
          <command
                commandId="org.openehealth.ipf.platform.manager.jmxexplorer.ui.open.jmxeditor"
                icon="icons/database_edit.png"
                style="push">
          </command>
          <separator
                name="org.openehealth.ipf.platform.manager.jmxexplorer.ui.separator1"
                visible="true">
          </separator>
       </menuContribution>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
       <command
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.open.jmxeditor"
             name="%open_jmx_editor">
       </command>
    </extension>
    <extension
          point="org.eclipse.ui.handlers">
       <handler
             class="org.openehealth.ipf.platform.manager.jmxexplorer.ui.handlers.OpenJMXEditorHandler"
             commandId="org.openehealth.ipf.platform.manager.jmxexplorer.ui.open.jmxeditor">
          <enabledWhen>
             <reference
                   definitionId="org.openehealth.ipf.platform.manager.jmxexplorer.ui.single.mbean.selection">
             </reference>
          </enabledWhen>
       </handler>
    </extension>
    <extension
          point="org.eclipse.ui.bindings">
       <key
             commandId="org.openehealth.ipf.platform.manager.jmxexplorer.ui.open.jmxeditor"
             contextId="org.eclipse.ui.contexts.window"
             schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
             sequence="CTRL+J">
       </key>
    </extension>
    <extension
          point="org.eclipse.core.expressions.definitions">
       <definition
             id="org.openehealth.ipf.platform.manager.jmxexplorer.ui.single.mbean.selection">
          <and>
             <with
                   variable="selection">
                <count
                      value="+">
                </count>
                <iterate
                      operator="and">
                   <or>
                      <adapt
                            type="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.MBeanAttributesGroupNode">
                      </adapt>
                      <adapt
                            type="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.MBeanAttributeNode">
                      </adapt>
                      <adapt
                            type="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.MBeanOperationNode">
                      </adapt>
                      <adapt
                            type="org.openehealth.ipf.platform.manager.jmxexplorer.ui.tree.MBeanOperationsGroupNode">
                      </adapt>
                   </or>
                </iterate>
             </with>
          </and>
       </definition>
    </extension>

</plugin>
