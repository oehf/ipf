<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.openehealth.ipf.commons</groupId>
    <artifactId>commons-ihe-pixpdqv3</artifactId>
    <name>commons-ihe-pixpdqv3</name>

    <parent>
        <groupId>org.openehealth.ipf.commons</groupId>
        <artifactId>commons-ihe</artifactId>
        <version>2.2.2</version>
    </parent>

    <properties>
        <osgi.export.pkg>
            org.openehealth.ipf.commons.ihe.pixpdqv3.*,
            wsdl.iti44,
            wsdl.iti45,
            wsdl.iti46,
            wsdl.iti47
        </osgi.export.pkg>
        <osgi.import.pkg>
            org.openehealth.ipf.modules.hl7.message,
            groovy.util,
            ca.uhn.hl7v2.model,
            *
        </osgi.import.pkg>
        <osgi.fragment.host>org.apache.cxf.bundle</osgi.fragment.host>
    </properties>
    
    <dependencies>
        <!-- Dependencies for main -->
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>commons-ihe-pixpdq</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>commons-ihe-hl7v3</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Dependencies for test -->
        <dependency>
            <artifactId>xmlunit</artifactId>
            <groupId>xmlunit</groupId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openehealth.ipf.commons</groupId>
            <artifactId>commons-ihe-hl7v3</artifactId>
            <version>${project.version}</version>
	        <scope>test</scope>
            <type>test-jar</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
